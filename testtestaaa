
#! /usr/bin/env python
# -*- coding:utf-8 -*-

import requests
import os
import random
import json
import time
import base64

basedir = 'E:\\spider_csdn\\work\\'
access_token = ''



def doReadFileList():
    filelist = []
    # basedir = 'C:\\Users\\Administrator\\Desktop\\gz\\'
    filelist = os.listdir(basedir)
    return filelist

def doReadFile(filename):

    content = ''
    f = open(filename,'r')
    content = base64.b64encode(f.read()).decode('utf-8')
    f.close()
    return content

def doCreateAndUp(filename,filecontents):

    print filename,filecontents

    url = 'https://api.github.com'
    header = {'Authorization':'token ' + access_token }
    #create
    creat_part = '/repos/Limpid94/testforapi/contents/l/2'
    creat_url = url+creat_part+filename

    contents = {
        "message": "1122",
        "committer": {
            "name": "Limpid94",
             "email": "393464613@qq.com"
        },
        "content": filecontents
    }

    contents = json.dumps(contents)
    req = requests.put(url=creat_url,data=contents,headers=header)
    if req.status_code == 201:
        #upload success:
        print '[*] upload success',filename
    else:
        # upload fail:
        print req.status_code
        print req.text
        exit(-1)



def doSleep():
    ran = random.randint(30,300)
    print '[*] Sleep',ran,'\'s'
    time.sleep(ran)


def doControl():
    # Read all file in the path:
    allfilenameList = doReadFileList()
    # Read each file in the list and upload
    for fn in allfilenameList:
        filename = basedir+fn
        # print filename
        # Open file and Read contents
        filecontents = doReadFile(filename)
        # Upload
        doCreateAndUp(fn[len(fn)-3:len(fn)],filecontents)
        # Sleeping
        doSleep()


if __name__ == '__main__':
    doControl()



